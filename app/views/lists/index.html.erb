<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1610890690846-5149750c8634?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1771&q=80)">
    <h1 class="">Save any kind of movies.</h1>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="row row-cols-1 row-cols-md-2 g-4">
          <div class="col">
            <div class="card" style="background-image: url(https://images.unsplash.com/photo-1468174482686-1047396f13b3?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80)">
              <div class="card-body">
                <h5 class="card-title"><%= list.name %></h5>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
